    <ul>
        {{#each pets}}

        <li>
            <div class="conteiner-two-wrap">
                <div>
                    <img class="img-rounded" src="{{this.img}}" width="140" height="140" />
                </div>
                <div class="pet-wrap">
                    <p class="font-bold">{{ this.petName }}</p>
                    <p> Pet type: {{this.petType }}</p>
