            <div class="events-btns-inline">
                <div class="left-btn">
                    <button class="button-grey"><a href="/pets/{{this._id}}">Pet details</a></button>
                </div>
                <div class="right-btn">
                    <button class="button-blue"><a href="/pets/{{this._id}}/update">Edit my pet</a></button>
                </div>
            </div>
        </li>
        {{/each}}
    </ul>

    <div class="btn-block">
        <button class="button-grey"><a href="/profile">Back to profile</a></button>
    </div>
    <div class="btn-block">
        <button class="button-blue"><a href="/pets/new">Add a pet</a></button>

    </div>
