<div class="container-view">

    <h1>Add pet</h1>
    <div class="subtitle">
        <p class="paw">🐾🐾🐾🐾🐾🐾</p>
    </div>
    <form id="form" action="/pets" method="POST">
        <div class="input-container">
            <label for="petType">Type</label>
            <br>
            <input class="input-font" type="text" name="petType" placeholder="Type of your pet" required>
        </div>
        <div class="input-container">
            <label for="petWeight">Weight</label>
            <br>
            <input class="input-font" type="number" name="petWeight" placeholder="Weight of your pet" required>
        </div>

        <div class="input-container">

            <label for="petAge">Age</label>
            <br>
            <input class="input-font" type="number" name="petAge" placeholder="Age of your pet" required>
        </div>

        <div class="input-container">

            <label for="petName">Name</label>
            <br>
            <input class="input-font" type="text" name="petName" placeholder="Name of your pet" required>
        </div>

        <div class="btn-block">
            <button class="button-blue" type="submit">Submit</button>
        </div>


    </form>
    <div class="btn-block">
        <button class="button-grey"><a href="/profile">Back to profile</a></button>
    </div>

    <div>
        <img class="bottom-img" src="/images/pets2.png">
    </div>

</div>