<h1>
  {{#if ownEvents}}
    My tasks
  {{else if thirdParty}}
    {{user.name}}'s tasks
  {{else}}  
    Tasks
  {{/if}}
</h1>
<div class="subtitle">
  <p class="paw">ğŸ¾ğŸ¾ğŸ¾ğŸ¾ğŸ¾ğŸ¾</p>
</div>

<ul class="events">
  <h2>Current tasks</h2>
  {{#unless currentEvents}}
  <p id="no-task">There is no current task</p>
  {{/unless}}
  {{#each currentEvents}}
  <li>
    <div class="review">
      <div id="title">
        <h3>{{ this.title }}</h3>
      </div>
      <div id="review-icon">
        <a class="event-review" href="/reviews/{{this._id}}"><img class="home-icon" src="/images/review2.png" /></a>
      </div>
      <div id="write-review">
        <a class="event-review" href="/reviews/{{this._id}}">Write a review</a>
      </div>
    </div>

    <div class="two-divs-inline">
      <div id="event-data">
        <p>Pet: 
        {{!-- {{#each ../pets}}
          {{this.petType}}
        {{/each}} --}}
       </p>
       <p>Where: {{ this.address.location }}</p>
       <p>Starts: {{ this.start }} </p>
       <p>Ends: {{ this.end }} </p>
       <p>Owner: 
      {{#if ../ownEvents}}
        <span id="me">Me</span>
      {{else}}
        <a href="/users/{{this.owner._id}}">
        {{#if this.owner.name}}
           {{ this.owner.name }}
        {{else}}        
           {{ this.owner.email }}
        {{/if}}
        </a>
      {{/if}}
      </p> 

      </div>
        
      <div>
        {{#if this.keeper}}
          <button class="button-blue" id="keeper-selected">Keeper already selected</button>
        {{else}}
          {{#unless ../ownEvents}}       
            <button class="button-red"><a href="/events/{{this._id}}/enroll">Enroll</a></button>
          {{/unless}}      
        {{/if}}
      </div>

    </div> 

    {{#if ../ownEvents}}
     <div class="events-btns-inline">
       <div class="left-btn"><form action="/events/{{this._id}}/delete" method="POST">
         <button class="button-red" type="submit" value="Delete">Delete</button>
     </form></div>
       <div class="right-btn"><button class="button-grey"><a href="/events/{{this._id}}">Details</a></button></div>
     </div>
    {{else}}
     <div class="centred-btn">
       <button class="button-grey"><a href="/events/{{this._id}}">Details</a></button>
     </div>
    {{/if}}
    
  </li>
  {{/each}}
</ul>

