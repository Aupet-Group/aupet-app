<h1>
  {{#if ownEvents}}
    My tasks
  {{else}}
    Tasks
  {{/if}}
</h1>
<div class="subtitle">
  <p class="paw">ğŸ¾ğŸ¾ğŸ¾ğŸ¾ğŸ¾ğŸ¾</p>
</div>

<ul class="events">
  {{#each events}}
  <li>
    <div class="review">
      <div id="title">
        <h2>{{ this.title }}</h2>
      </div>
      <div id="review-icon">
        <a class="event-review" href="/reviews/{{this._id}}"><img class="home-icon" src="/images/review2.png" /></a>
      </div>
      <div id="write-review">
        <a class="event-review" href="/reviews/{{this._id}}">Write a review</a>
      </div>
    </div>
    
    <p>Pet: 
      {{!-- {{#each ../pets}}
        {{this.petType}}
      {{/each}} --}}
    </p>
    <p>Where: {{ this.address.location }}</p>
    <p>Starts: {{ this.start }} </p>
    <p>Ends: {{ this.end }} </p>
    <p>Owner: 
      {{#if ../ownEvents}}
        <span id="me">Me</span>
      {{else}}
        <a href="/users/{{this.owner._id}}">{{ this.owner.name }} </a>
      {{/if}}
      </p> 
    <div class="events-btns-inline">
      {{!-- {{#unless ../ownEvents}} --}}
      <div class="left-btn"><button class="button-grey"><a href="/events/{{this._id}}/enroll">Enroll</a></button></div>
      {{!-- {{/unless}} --}}
      <div class="right-btn"><button class="button-grey"><a href="/events/{{this._id}}">Details</a></button></div>
    </div>
  </li>
  {{/each}}
</ul>
<div>
  <img class="bottom-img" src="/images/pets2.png">
</div>

<div class="events-btns-inline">
  <div class="left-btn"><button class="button-blue"><a href="/events/new">Add a new task</a></button></div>
  <div class="right-btn"><button class="button-blue"><a href="/profile">Go to profile</a></button></div>
</div>