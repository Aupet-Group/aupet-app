<h1>TASKS</h1>

<button class="event"><a href="/events/new">Add a new task</button>
<ul>
  {{#each events}}
  <li>
    <a href="/events/{{this._id}}">{{ this.title }} </a>
    <p>{{ this.address.location }}</p>
    <p>{{ this.initialDateTime }} </p>
    <p>{{ this.finalDateTime }} </p>
    {{#unless ../ownEvents}}
    <button class="enroll"><a href="/events/{{this._id}}/enroll">Enroll</button>
    {{/unless}}
    <button class="details"><a
        href="/events/{{this._id}}">Details</button>

  </li>
  {{/each}}
</ul>
<button><a href="/profile">Go to profile</button>
