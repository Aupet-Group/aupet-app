<h1>Edit task</h1>
<div class="subtitle">
<p class="paw">🐾🐾🐾🐾🐾🐾</p>
</div>
<form class="event-form" action="/events/{{_id}}" method="POST">
    
   <label for="title">Title</label>
   <select name="title">
       <option>Pet boarding</option>
       <option>House sitting</option>
       <option>Day care</option>
       <option>Drop-in visit</option>
       <option>Dog walking</option>
   </select><br>

   <label for="selectedPet">Pet</label>
   <select name="selectedPet">
    {{#each pets}}
      <option>{{ this.petName }} </option>
    {{/each}}
      <option>All</option>
   </select><br>
        
    <label for="description">Description</label>
    <input type="textarea" name="description" value="{{event.description}}" required><br>

    <label for="location">Location</label>
    <input type="text" name="location" value="{{event.address.location}}" required><br>

    <label for="startdate">Start</label>
    <input type="date" name="initialDateTime" value="{{event.start}}" min="{{ today }}" required><br>

    <label for="enddate">End</label>
    <input type="date" name="finalDateTime" value="{{event.end}}" min="{{ today }}" required><br>

    <button class="button-blue" type="submit">UPDATE TASK</button>

</form>

<div>
  <img class="bottom-img" src="/images/pets6.png">
</div>