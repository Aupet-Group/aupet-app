<h1>{{ event.title }} </h1>
<div class="subtitle">
<p class="paw">🐾🐾🐾🐾🐾🐾</p>
</div>
<section>
  {{#unless user}}
    <p>Owner: <a href="/users/{{event.owner._id}}">
  
    {{#if event.owner.name}}
      {{ event.owner.name }} 
    {{else}}
      {{ event.owner.email}}
    {{/if}} </a></p>  

  {{/unless}}
  <p>{{ event.description }}</p>
  <ul class="events">
    {{#each pets}}
    <li>
      <p id="paw">🐾</p>
      <p>Type: {{ this.petType }} <p/>
      <p>Name: {{ this.petName }}</p>
      <p>Age: {{ this.petAge }} yo</p>
      <p>Weight: {{ this.petWeight }} kg</p>    
    </li>
    {{/each}}
  </ul>
  <p>Where: {{ event.address.location }}</p>
  <p>Starts: {{ event.start }} </p>
  <p>Ends: {{ event.end }} </p>
  


 {{#if user}}
  <div class="events-btns-inline">
    <div class="left-btn">
       <button class="edit button-blue"><a href="/events/{{event._id}}/update">Edit</a></button>
    </div>
    <div class="right-btn">
      <form action="/events/{{event._id}}/delete" method="POST">
         <button class="button-red" type="submit" value="Delete">Delete</button>
     </form>
    </div>
  </div>
  {{/if}}


  <div class="centred-btn">
{{#unless user}}
     <button id="enroll" class="home-button button-blue"><a href="/events/{{event._id}}/enroll">Enroll</a></button>
{{/unless}}
  </div>
   
</section>

<section>
  {{#if candidates}}
  <ul class="events"><h2>Candidates:</h2>  
    {{#each candidates}}
      <li>
        <div class="candidates">     

           <div class="left">
              {{#if ../allocated}}
                <p id="ok">🆗</p>
              {{else}}
                <p id="whiteCheck">✅</p>
              {{/if}}
           </div>     

           <div class="middle">
             <div>
                <img class="img-rounded" src="{{this.img}}" width="70" height="70" />
             </div>
            
           </div>    
           <div class="middle2">
              
               <p>Name: <a href="/users/{{this._id}}">{{ this.name }}</a></p>
               <p>Email: {{ this.email }} </p>
               <p>Phone: {{ this.phone }} </p>
            
           </div>         

               
           <div class="right">
            {{#if ../user}}
             <button class="button-grey"><a href="/events/{{../event._id}}/accept/{{this._id}}">Accept</a></button>
             {{/if}}
           </div>  

       </div>
      </li>       
    {{/each}}
  </ul>
 {{/if}} 
</section>

<div>
  <img class="bottom-img" src="/images/pets1.png">
</div>
<div class="events-btns-inline">
  <div class="left-btn"><button class="button-blue"><a href="/events/myevents">My tasks</a></button></div>
  <div class="right-btn"><button class="button-blue"><a href="/events">All tasks</a></button></div>
</div>


