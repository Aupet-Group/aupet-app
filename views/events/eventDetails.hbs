<h1>{{ event.title }} </h1>
<p>{{ event.description }}</p>
<ul>
   {{#each pets}}
   <li>
     <p>{{ this.petType }} <p/>
     <p>{{ this.petName }}</p>
     <p>{{ this.petAge }} </p>
     <p>{{ this.petWeight }} </p>
    
   </li>
   {{/each}}
</ul>
<p>{{ event.address.location }}</p>
<p>{{ event.initialDateTime }} </p>
<p>{{ event.finalDateTime }} </p>
<p>{{ event.owner }}</p>
<p>{{ currentUser._id }}</p>
<button class="enroll"><a href="/events/{{event._id}}/enroll">Enroll</button>
<button class="edit"><a href="/events/{{event._id}}/update">Edit</button>
<form action="/events/{{event._id}}/delete" method="POST">
  <input type="submit" value="Delete">
</form>
<button class="events"><a href="/events">All events</button>

