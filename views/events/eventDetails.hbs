<h1>{{ event.title }} </h1>
<p>{{ event.description }}</p>
<ul><p>Pet(s):</p>
   {{#each pets}}
   <li>
     <p id="paw">🐾</p>
     <p>Type: {{ this.petType }} <p/>
     <p>Name: {{ this.petName }}</p>
     <p>Age: {{ this.petAge }} </p>
     <p>Weight: {{ this.petWeight }} </p>
    
   </li>
   {{/each}}
</ul>
<p>Location: {{ event.address.location }}</p>
<p>Starts: {{ event.initialDateTime }} </p>
<p>Ends: {{ event.finalDateTime }} </p>
<p>Owner: {{ event.owner.name }}</p>

<section>
  <ul><p>Candidates:</p>
  
    {{#each candidates}}
    <li>      
      {{#if ../allocated}}
      <p id="ok">🆗</p>
      {{else}}
      <p id="whiteCheck">✅</p>
      {{/if}}
      <p>Name: {{ this.name }}</p>
      <p>Email: {{ this.email }} </p>
      <p>Phone: {{ this.phone }} </p>
      <button class="accept"><a href="/events/{{../event._id}}/accept/{{this._id}}">Accept keeper</button>
    </li>
    {{/each}}
  </ul>
</section>


{{#unless ownEvents}}
<button class="enroll"><a href="/events/{{event._id}}/enroll">Enroll</button>
{{/unless}}
<button class="edit"><a href="/events/{{event._id}}/update">Edit</button>
<form action="/events/{{event._id}}/delete" method="POST">
  <button type="submit" value="Delete">Delete</button>
</form>

<button class="events"><a href="/events/myevents">Back to my tasks</button>
<button class="events"><a href="/events">All tasks</button>

