<h1>{{ event.title }} </h1>
<div class="subtitle">
<p class="paw">🐾🐾🐾🐾🐾🐾</p>
</div>
<section>
  <p>{{ event.description }}</p>
  <ul class="events">
    {{#each pets}}
    <li>
      <p id="paw">🐾</p>
      <p>Type: {{ this.petType }} <p/>
      <p>Name: {{ this.petName }}</p>
      <p>Age: {{ this.petAge }} </p>
      <p>Weight: {{ this.petWeight }} </p>    
    </li>
    {{/each}}
  </ul>
  <p>Where: {{ event.address.location }}</p>
  <p>Starts: {{ start }} </p>
  <p>Ends: {{ end }} </p>
  <p>Owner: <a href="/users/{{event.owner._id}}">{{ event.owner.name }} </a></p>  

  <div class="events-btns-inline">
    <div class="left-btn">
       <button class="edit button-grey"><a href="/events/{{event._id}}/update">Edit</a></button>
    </div>
    <div class="right-btn">
      <form action="/events/{{event._id}}/delete" method="POST">
         <button class="button-red" type="submit" value="Delete">Delete</button>
     </form>
    </div>
  </div>


  <div class="centred-btn">
{{!-- {{#unless ownEvents}} --}}
     <button id="enroll" class="home-button button-blue"><a href="/events/{{event._id}}/enroll">Enroll</a></button>
{{!-- {{/unless}} --}}
  </div>
   
</section>

<section>
  {{#if candidates}}
  <ul class="events"><h2>Candidates:</h2>  
    {{#each candidates}}
      <li>
        <div class="candidates">     

           <div class="left">
              {{#if ../allocated}}
                <p id="ok">🆗</p>
              {{else}}
                <p id="whiteCheck">✅</p>
              {{/if}}
           </div>     

           <div class="middle">
              
               <p>Name: {{ this.name }}</p>
               <p>Email: {{ this.email }} </p>
               <p>Phone: {{ this.phone }} </p>
            
           </div>                  
               
          <div class="right">
             <button class="button-grey"><a href="/events/{{../event._id}}/accept/{{this._id}}">Accept keeper</a></button>
          </div>  

       </div>
      </li>       
    {{/each}}
  </ul>
 {{/if}} 
</section>

<div>
  <img class="bottom-img" src="/images/pets1.png">
</div>
<div class="events-btns-inline">
  <div class="left-btn"><button class="button-blue"><a href="/events/myevents">My tasks</a></button></div>
  <div class="right-btn"><button class="button-blue"><a href="/events">All tasks</a></button></div>
</div>


