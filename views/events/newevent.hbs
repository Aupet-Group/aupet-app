<h1>Add a new task</h1>
<div class="subtitle">
<p class="paw">🐾🐾🐾🐾🐾🐾</p>
</div>
<form  class="event-form" action="/events" method="POST">
   <label for="title">Title</label>
   <select name="title">
       <option>Pet boarding</option>
       <option>House sitting</option>
       <option>Day care</option>
       <option>Drop-in visit</option>
       <option>Dog walking</option>
   </select><br>

   <label for="selectedPet">Pet</label>
   
    {{#if pets}}
      <select name="selectedPet"></select>
       {{#each pets}}
         <option>{{ this.petName }} </option>
       {{/each}}
       <option>All</option>
     </select><br> 
     {{else}} <p id="add-pet-warning">Please, add at least one pet before creating a task.</p> 
     <button class="button-blue" id="add-pet-in-event"><a href="/pets/new">Add a pet</a></button>
     {{/if}}    

    <label for="description">Description</label>
    <input type="textarea" name="description" placeholder="Describe your event" required><br>

    <label for="location">Location</label>
    <input type="text" name="location" placeholder="Location" required><br>

    <label for="startdate">Start date</label>
    <input type="date" name="initialDateTime" min="{{ today }}" placeholder="Starts" required><br>

    <label for="enddate">End date</label>
    <input type="date" name="finalDateTime" min="{{ today }}" placeholder="Ends" required><br>
   {{#if pets}}
    <button class="button-blue" type="submit">ADD TASK</button>
    {{/if}}

</form>

<div>
  <img class="bottom-img" id="bird" src="/images/pets9.png">
</div>