<h1>ADD EVENT</h1>
<form  id="eventform" action="/events" method="POST">

    <label for="title">Title</label>
    <input type="text" name="title" placeholder="Name your event" required>

    <label for="description">Description</label>
    <input type="text" name="description" placeholder="Describe your event" required>

    <label for="location">Location</label>
    <input type="text" name="location" placeholder="Location" required>

    <label for="startdate">Start date</label>
    <input type="date" name="initialDateTime" placeholder="Starts" required>

    <label for="enddate">End date</label>
    <input type="date" name="finalDateTime" placeholder="Ends" required>

    <button type="submit">ADD EVENT</button>

</form>