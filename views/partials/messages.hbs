<div class="infoMessage">
  {{#if infoMessages}}
  <p class="info">{{infoMessages}}</p>
  {{/if}}
</div>

<div class="errorMessages ">
  {{#if errorMessages }}
      <p class="error">{{ errorMessages }}</p>
    {{/if }}
  </div>

  <div class="dangerMessages messages">
    {{#if dangerMessages}}
    <p class="info">{{dangerMessages}}</p>
    {{/if}}
  </div>

  <div class="successMessages messages">
    {{#if successMessages}}
    <p class="info">{{successMessages}}</p>
    {{/if}}
  </div>

  <div class="warningMessages messages">
    {{#if warningMessages}}
    <p class="info">{{warningMessages}}</p>
    {{/if}}
  </div>