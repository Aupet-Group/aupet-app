{{user}}
<h1>Edit Profile</h1>
<form action="/" method="POST" id="form">
    <div>
        <label for="username">Username</label>
        <input type="username" name="username" value="{{user.username}}">
    </div>
    <div>
        <label for="name">Name</label>
        <input type="text" name="name" value="{{user.name}}">
    </div>
    <div>
        <label for="lastname">Last Name:</label>
        <input type="text" name="lastname" value="{{user.lastname}}">
    </div>
    <div>
        <label for="email">email:</label>
        <input type="email" name="email" value="{{user.email}}">
    </div>
    <div>
        <label for="landline">Land Line:</label>
        <input type="tel" name="phone" value="{{user.phone}}">
    </div>
    <div>
        <label for="mobile">Mobile Phone:</label>
        <input type="tel" name="mobile" value="{{user.mobile}}">
    </div>
    <div>
        <label for="secondaryPhone">Secondary Phone:</label>
        <input type="tel" name="secondaryPhone" value="{{user.secondaryPhone}}">
    </div>
    <div>
        <label for="owner"><input type="checkbox" name="owner" value="{{user.owner}}">Owner</label>
    </div>

    <div>
        <label for="Keeper"><input type="checkbox" name="keeper" value="{{user.keeper}}">Keeper</label>
    </div>

    <div>
        {{#if user.img}}
        <img src="{{user.img:}}">
        {{/if}}
    </div>
    <button class="button" type="submit">Update</button>
</form>