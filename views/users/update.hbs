<h1>Edit Profile</h1>
<form action="/" method="POST" id="form">

    <div>
        <label for="name">Name</label>
        {{#if user.name}}
        <input type="text" name="name" value="{{user.name}}" required>
        {{else}}
        <input type="text" name="name" required>
        {{/if}}
    </div>
    <div>
        <label for="lastName">Last Name:</label>
        <input type="text" name="lastName" value="{{user.lastName}}">
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" name="email" value="{{user.email}}">
    </div>
    <div>
        <label for="Phone">Phone:</label>
        <input type="tel" name="phone" value="{{user.phone}}">
    </div>
     <div>
        <label for="street">Street:</label>
        <input type="text" name="street" value="{{user.address.[0].street}}">
    </div>

    <div>
        <label for="number">Number:</label>
        <input type="number" name="number" value="{{user.address.[0].number}}">
    </div>

    <div>
        <label for="zipcode">ZIP code:</label>
        <input type="text" name="zipcode" value="{{user.address.[0].zipcode}}">
    </div>
    <div>
        <label for="location">Location:</label>
        <input type="text" name="location" value="{{user.address.[0].location}}">
    </div>
    <div>
        <label for="owner"><input type="checkbox" name="owner" value="checked" {{owner}}>Owner</label>
    </div>

    <div>
        <label for="keeper"><input type="checkbox" name="keeper" value="checked" {{keeper}}>Keeper</label>
    </div>


    <div>
        {{#if user.img}}
        <img src="{{user.img:}}">
        {{/if}}
    </div>
    <div class="btn-block">
        <button class="button-blue" type="submit">Update</button>
    </div>
</form>
<div class="btn-block">
    <button class="button-grey"><a href="/profile">Back to profile</a></button>
</div>