<h1>Edit Profile</h1>
<form action="/" method="POST" id="form">

    <div>
        <label for="name">Name</label>
        <input type="text" name="name" value="{{user.name}}">
    </div>
    <div>
        <label for="lastname">Last Name:</label>
        <input type="text" name="lastname" value="{{user.lastname}}">
    </div>
    <div>
        <label for="email">email:</label>
        <input type="email" name="email" value="{{user.email}}">
    </div>
    <div>
        <label for="landline">Land Line:</label>
        <input type="tel" name="phone" value="{{user.phone}}">
    </div>
    <div>
        <label for="mobile">Mobile Phone:</label>
        <input type="tel" name="mobile" value="{{user.mobile}}">
    </div>
    <div>
        <label for="secondaryPhone">Secondary Phone:</label>
        <input type="tel" name="secondaryPhone" value="{{user.secondaryPhone}}">
    </div>
    <div>
        <label for="street">Street:</label>
        <input type="text" name="street" value="{{user.address.[0].street}}">
    </div>

    <div>
        <label for="number">number:</label>
        <input type="number" name="number" value="{{user.address.[0].number}}">
    </div>

    <div>
        <label for="zipcode">ZIP code:</label>
        <input type="text" name="zipcode" value="{{user.address.[0].zipcode}}">
    </div>
    <div>
        <label for="owner"><input type="checkbox" name="owner" value="checked" {{owner}}>Owner</label>
    </div>

    <div>
        <label for="keeper"><input type="checkbox" name="keeper" value="checked" {{keeper}}>Keeper</label>
    </div>

    <div>
        {{#if user.img}}
        <img src="{{user.img:}}">
        {{/if}}
    </div>
    <button type="submit">Update</button>
</form>
 <button><a href="/profile">Back to profile</a></button>
